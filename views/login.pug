extends layout.pug

block hero
  section.main-hero.is-dark.is-bold
    .hero-body
      .container
        h1.title Scalar Movies App
        h2.subtitle Find your favourites movies and rate them.

block content
  .container(style="flex: 1; padding: 50px 0; margin: 0 auto; width: 80%;")
    h1.title Login
    form(id="login" action='/login' method="post")
      .field
        label.label Username 
        .control
          input.input(type="text", id="username", name="username", placeholder="Username")
      .field
        label.label Password
        .control 
          input.input(type="password", id="password", name="password", placeholder="Password")
      button.button.is-link.mt-3(type="submit" value="Submit") LogIn